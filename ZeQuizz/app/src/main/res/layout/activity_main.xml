<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epulapp.zequizz.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offline:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOffIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 vs IA" />

            <Button
                android:id="@+id/btnOff1v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 VS 1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOffTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A VS Team B" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="117dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online" />

        <Button
            android:id="@+id/btnOn1v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 VS 1 Online" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
